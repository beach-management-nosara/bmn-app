---
import { Image } from "astro:assets";
import { Instagram, Facebook } from "lucide-react";

import { navBarlinks as links } from "@/lib/utils";
import MobileNav from "@/components/jsx/mobile-nav";

import logoImg from "@/assets/images/logo.png";
---

<nav class="sticky top-0 z-50 bg-white px-8 py-2 shadow">
    <div class="mx-auto mx-auto flex max-w-screen-2xl items-center justify-between">
        <a href="/" class="text-2xl font-bold">
            <Image src={logoImg} alt="logo" width={90} format="png" />
        </a>

        <div class="hidden space-x-7 md:flex">
            {
                links.map(link => (
                    <a
                        href={link.href}
                        class="text-xs font-bold uppercase tracking-widest hover:text-gray-300"
                    >
                        {link.name}
                    </a>
                ))
            }
        </div>
        <div class="md:hidden">
            <MobileNav client:load />
        </div>

        <div class="hidden gap-10 md:flex">
            <Facebook className="text-primary" size={20} />
            <Instagram className="text-primary" size={20} />
        </div>
    </div>
</nav>
