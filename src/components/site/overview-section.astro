---
import { Image } from "astro:assets";

import { bannerImg } from "@/assets/images";
import Logo2White from "@/components/icons/logo2-white.astro";
import { MaxWidthContainer } from "./max-width-container";

interface OverviewSectionProps {
    showCta?: boolean;
}

const { showCta = false } = Astro.props as OverviewSectionProps;
---

<section id="sub-hero">
    <div class="relative">
        <div class="absolute inset-0">
            <div class="h-full w-full">
                <Image src={bannerImg} alt="banner" class="h-full w-full object-cover" />
            </div>
            <!-- Overlay ðŸ‘‡ -->
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent">
            </div>
        </div>
        <MaxWidthContainer>
            <div class="relative z-10 flex flex-col items-center gap-16 py-10 lg:flex-row">
                <div>
                    <Logo2White class="mx-auto size-64" />
                </div>
                <div class="space-y-3">
                    <div>
                        <div class="flex items-center">
                            <div class="w-1/5 border-t border-secondary lg:max-w-[4rem]"></div>
                            <span
                                class="ml-4 text-base font-semibold uppercase tracking-widest text-secondary"
                            >
                                <slot name="background-text" />
                            </span>
                        </div>
                        <h2 class="text-4xl font-semibold">
                            <slot name="headline" />
                        </h2>
                    </div>
                    <p class="text-pretty text-xl font-light lg:text-2xl">
                        <slot name="description" />
                    </p>
                    {
                        showCta && (
                            <div class="mt-6 flex justify-center lg:justify-start">
                                <a
                                    href="/contact"
                                    class="block transform rounded-lg bg-primary px-6 py-3 text-white transition-all duration-300 hover:scale-[1.02] hover:bg-primary/70"
                                >
                                    Inquire Now
                                </a>
                            </div>
                        )
                    }
                </div>
            </div>
        </MaxWidthContainer>
    </div>
</section>
