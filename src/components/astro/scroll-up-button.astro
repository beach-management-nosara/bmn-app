---
import { ChevronUpIcon } from "lucide-react";
---

<button
    id="scroll-up"
    class="fixed bottom-4 right-4 m-0 rounded-full bg-primary p-2 text-white shadow-lg"
>
    <ChevronUpIcon className="size-8" />
</button>

<script is:inline>
    const scrollUpButton = document.getElementById("scroll-up");

    scrollUpButton.addEventListener("click", () => {
        window.scrollTo({
            top: 0,
            behavior: "smooth"
        });
    });
</script>
