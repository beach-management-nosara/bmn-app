<section id="experiences" class="relative my-8">
    <!-- Image spans the entire container -->
    <div class="absolute inset-0 h-full w-full lg:h-[32rem]">
        <slot name="image" />
        <!-- Overlay -->
        <div
            class="absolute inset-0 bg-gradient-to-r from-black via-black/80 to-black/80 lg:to-transparent"
        >
        </div>
    </div>

    <!-- Content Container -->
    <div
        class="relative mx-auto grid min-h-[32rem] max-w-screen-xl grid-cols-1 px-5 lg:grid-cols-2"
    >
        <div class="flex flex-col justify-center lg:py-6">
            <slot name="header" />
            <slot name="content" />
        </div>
    </div>
</section>
