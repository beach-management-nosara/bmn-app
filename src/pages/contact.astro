---
import { Image } from "astro:assets";

import MainLayout from "@/layouts/main-layout.astro";
import ContactInfo from "@/components/astro/contact-info.astro";
import { ContactForm } from "@/components/jsx/contact-form";
import MaxWidthContainer from "@/components/astro/max-width-container.astro";
import SectionHeader from "@/components/astro/section-header.astro";
import { heroContactImg, reliableImg5 } from "@/assets/images";

export const prerender = false;
---

<MainLayout title="Contact Us | Beach Management Nosara">
    <section id="hero" class="relative h-[45vh] overflow-hidden">
        <div class="absolute inset-0">
            <div class="h-full w-full bg-gray-400">
                <Image src={heroContactImg} alt="banner" class="h-full w-full object-cover" />
            </div>
            <!-- Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/80 to-black/10">
            </div>
        </div>

        <MaxWidthContainer>
            <div class="relative flex h-full flex-col justify-center">
                <div class="flex items-center">
                    <div class="hidden border-t border-primary lg:block lg:w-1/5 lg:max-w-[4rem]">
                    </div>
                    <span
                        class="border-b-2 border-primary pb-2 text-sm font-semibold uppercase tracking-widest text-primary lg:ml-4 lg:border-none lg:pb-0"
                    >
                        Contact Us
                    </span>
                </div>
                <h1 class="my-4 w-full text-4xl leading-tight lg:w-3/4 lg:text-5xl">
                    Get in touch with us
                </h1>
            </div>
        </MaxWidthContainer>
    </section>

    <section id="contact-form">
        <MaxWidthContainer>
            <div class="flex flex-col-reverse items-center gap-8 pt-20 lg:flex-row">
                <div class="w-full">
                    <SectionHeader>
                        <Fragment slot="background-text">Contact</Fragment>
                        <Fragment slot="heading">Let us know</Fragment>
                    </SectionHeader>
                </div>
            </div>

            <div>
                <ContactForm client:visible />
                <ContactInfo />
            </div>

            <div class="flex flex-col-reverse items-center gap-8 py-16 lg:flex-row">
                <div class="w-full">
                    <SectionHeader>
                        <Fragment slot="background-text">Vacation</Fragment>
                        <Fragment slot="heading">Your Dream Vacation Awaits</Fragment>
                    </SectionHeader>
                    <p class="prose-invert mt-8">
                        At Beach Management, we are dedicated to making your vacation dreams a
                        reality. Our team is committed to providing you and your family or travel
                        group with an unforgettable experience that will create lifelong memories.
                        Select from our exclusive range of luxury homes located in some of the
                        world's most stunning and secure locations and let us help you bring your
                        dreams to life!
                    </p>
                </div>
                <div class="w-full">
                    <Image src={reliableImg5} alt="hero" class="lg:clip-path-triangle w-full" />
                </div>
            </div>
        </MaxWidthContainer>
    </section>
</MainLayout>
